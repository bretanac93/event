/* variables */
lightBlue = rgb(84, 169, 203)
darkBlue = rgb(0, 126, 177)
textBlue = rgb(57, 150, 191)
textGray = rgb(180, 180, 180)

/* mixins */
rounded()
    -webkit-border-radius arguments
    -moz-border-radius arguments
    border-radius arguments

shadow(hoff, voff, blur, color = rgba(0, 0, 0, .7))
    -webkit-box-shadow hoff voff blur color
    -moz-box-shadow hoff voff blur color
    box-shadow hoff voff blur color

center(wo)
    position absolute
    margin-left 0% - (wo / 2)
    left 50%

/* styles */
.bgblue
    background-color rgb(0, 126, 177)

.bggreen
    background-color rgb(21, 172, 163)

.bggray
    background-color rgb(237, 237, 237)

.top-blue
    background-image linear-gradient(to bottom, rgba(101, 170, 206, 1), transparent)

.top-brown
    background-image linear-gradient(to bottom, rgba(198, 176, 140, 1), transparent)

.top-green
    background-image linear-gradient(to bottom, rgba(45, 175, 110, 1), transparent)

.top-pink
    background-image linear-gradient(to bottom, rgba(186, 141, 155, 1), transparent)

.swiper-container
    width 100%
    height 100%
    position fixed

.swiper-slide
    background-position center
    background-size cover

.swiper-pagination-bullet
    width 15px
    height 15px
    opacity 1

.swiper-pagination-bullet-active
    background-color rgb(17, 171, 161) !important

[class^=swiper-button]
    display none

.container-fluid
    position relative
    top 100%
    z-index 99

.topbar
    font-size 0.9em
    padding 12px 10px
    color white
    float right
    position fixed
    top 0
    z-index 100

    a
        text-decoration none
        color white

.caret-down
    display inline-block
    width 0
    height 0
    border-right 5px solid transparent
    border-left 5px solid transparent
    border-top 5px solid white
    vertical-align middle

.wrapper
    background-color rgba(0, 0, 0, .7)

@media screen and (min-width 992px)
    .topbar
        a
            padding-right 50px

            &:last-of-type
                float right
