@import "../base"

.bgimg
    position relative
    height 550px
    background-position center
    background-size cover

    .main
        width 100%
        position absolute
        center(100%)
        margin-top 150px
        font-size larger

        img
            width 150px
            height auto
            borderRadius(10px)
            margin-bottom 15px
            shadow(0, 2px, 5px, rgba(0, 0, 0, .3))

        *
            margin 3px 0

        h2, p
            color white

        p#val
            color rgb(80, 83, 83)

        ul
            color bgBlue

.container-fluid
    background-color rgb(211, 211, 211)

    #mobile
        *
            background-color white
        p
            background-color transparent

        & > .row
            shadow(1px, 1px, 5px, rgba(0, 0, 0, .4))

.followers

    .nav
        li
            width 50%
            font-weight bold
            font-size large
            a, a:hover, a:focus
                border none
                border-radius 0
                margin-right 0
        li.active > a
            color bgBlue
        li:not(.active) > a
            color rgb(132, 132, 132)
            background-color rgb(172, 172, 172) !important

    .tab-pane
        ul
            overflow-x auto
            overflow-y hidden
            white-space nowrap
            margin 15px 0

        .fuser
            position relative

            input
                position absolute
                top 10px
                right 10px

            img
                width 130px
                height auto

            p
                position absolute
                right 15px
                font-size larger
                color white
                text-shadow -1px 1px 0 black
                &.name
                    bottom 10px
                &.lastname
                    bottom -8px

        .info
            color rgb(125, 125, 125)
            margin-top 10px

            p
                line-height 1.7em

            a
                color bgBlue
                display block
                text-decoration none
                margin-bottom 15px

.striped
    margin-top 25px

.map
    padding-bottom 20px

    h3
        font-weight bold

.collapsed
    padding-top 10px
    .panel, .panel-body
        border none !important
        border-radius 0
        -webkit-box-shadow: none
        -moz-box-shadow: none
        box-shadow: none

    .panel-heading
        padding 6px 15px

    .panel-title
        padding-bottom 2px
        font-size 20px
        color rgb(125, 125, 125)
        border-bottom 1px solid rgb(236, 233, 231)

    .open .panel-title
        border-bottom none !important
        color bgBlue !important

    .panel-group .panel + .panel
        margin-top 0

    a[data-toggle="collapse"] > span.fa
        background-color rgb(177, 177, 177) !important
        color white
        border-radius 4px
        width 26px
        height 27px
        text-align center
        font-size larger
        margin-top -6px
        transition(.3s, linear)

    a[aria-expanded="true"]

        .back
            opacity 1

        & > span.fa
            -webkit-transform: rotate(180deg)
            -moz-transform: rotate(180deg)
            -ms-transform: rotate(180deg)
            -o-transform: rotate(180deg)
            transform: rotate(180deg)


.back
    transition(.3s, linear)
    opacity 0
    float right
    color rgb(53,53,53) !important
    font-weight bold
    font-size 13px
    padding-top 8px

.panel-body[class*=event] > .generic > img
    border-radius 0 !important

.opinion
    .body
        font-size 20px !important
        padding-top 0 !important

        .left
            font-weight bold
            font-size larger !important
            margin-top -10px

        .content
            padding-top 0 !important

        & > a
            background-color rgb(62, 62, 62) !important
            padding 0 15px
            borderRadius(15px)
            color rgb(130, 128, 129)

.generic
    padding-bottom 10px

    img, .left, .right
        display inline-block
    img
        width 90px
        height 90px
        borderRadius(10px)
        float left
        margin-right 10px

    .body
        padding-top 10px
        font-size 13px
        //todo: what to do with very small screen, img should dissapear
        width 75%
        float left
        display inline-block

        p
            margin-bottom 0

        &:not(:last-of-type)
            border-bottom 1px solid rgb(236, 233, 231)

        .left, .left a
            color rgb(76, 78, 80)

        .right
            span:first-child
                margin-right 20px
            .status.on:before,
            .status.off:before
                color white
                padding 3px 8px
                text-transform uppercase
                font-size smaller

            .status.on:before
                content 'activo'
                background-color rgb(50, 176, 227)

            .status.off:before
                content 'finalizado'
                background-color red

        .right, .content
            color rgb(177, 177, 177)

        .content
            padding-top 5px
            text-align justify
            strong
                font-style italic

.ratings
    margin-top 25px

    .rating
        padding-bottom 10px

        & > span
            padding-left 10%
            color rgb(130, 128, 129)
            font-weight bolder

        ul
            display inline-block
            float right
            padding-right 10%
            color rgb(50, 176, 227)
            margin-bottom 0

        &:last-of-type
            margin-bottom 100px

.cert
    p
        font-weight bolder
        font-size 16px


    img
        width 80%
        margin-bottom 40px


.social-user
    *
        background-color transparent !important

    h4
        font-weight bold

    a
        color rgb(104, 105, 109) !important

    a:hover, a:active
        color bgBlue !important