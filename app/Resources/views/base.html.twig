<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>
        {% block title %}
            Events
        {% endblock %}
    </title>
    {% block styles %}

        {% block default_styles %}
            <link rel="stylesheet" href="{{ asset('public/css/bootstrap.css') }}"/>
            <link rel="stylesheet" href="{{ asset('public/plugins/swiper/swiper.css') }}">
            <link rel="stylesheet" href="{{ asset('public/css/icomoon.css') }}">
            <link rel="stylesheet" href="{{ asset('public/plugins/morphSearch/morphsearch.css') }}">
            <link rel="stylesheet" href="{{ asset('public/css/site.css') }}"/>
        {% endblock %}

        {% block page_styles %}
        {% endblock %}

    {% endblock %}

    {% block init_scripts %}
        <script src="{{ asset('public/js/modernizr.js') }}"></script>
        <script src="{{ asset('public/js/rem.js') }}"></script>
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="{{ asset('public/js/html5shiv.js') }}"></script>
        <script src="{{ asset('public/js/respond.min.js') }}"></script>
        <![endif]-->
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
    <div class="topbar">
        <a href="#" class="pull-right" id="profile">
            <img src="{{ asset('anonymous.png') }}"/>
            <span class="hs">Mi Perfil</span>
            <span class="caret-down"></span>
        </a>

        <a href="#" class="pull-right">
            <span class="icon icon-plus"></span>
            <span class="hs">Sube un Evento</span>
        </a>

        <a href="#" class="pull-right" id="searchTop">
            <span class="icon icon-search"></span>
            <span class="hs">Busca tu Evento</span>
        </a>
        <a data-toggle="modal" href="#rlogin-modal" class="pull-right">Launch demo modal</a>
    </div>

    <div class="modal fade" id="rlogin-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                </div>
                </div>
            </div>
        </div>

    <div id="morphsearch" class="morphsearch">
        <div class="morphsearch-content">
            <div class="dummy-column text-center">
                <img class="img-circle img-responsive" src="{{ asset('anonymous.png') }}" alt="">

                <h2 id="username">Julieta Fuentes</h2>
            </div>
            <div class="dummy-column">
                <a class="dummy-media-object" href="#">
                    <h3>
                        <span class="icon icon-user"></span>
                        Mi Perfil
                    </h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>
                        <span class="icon icon-users"></span>
                        Amigos
                    </h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>
                        <span class="icon icon-ticket"></span>
                        Mis tickets
                    </h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>
                        <span class="icon icon-location"></span>
                        Mis eventos
                    </h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>
                        <span class="icon icon-notification"></span>
                        Notificaciones
                        <span class="badge">5</span>
                    </h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>
                        <span class="icon icon-bookmark"></span>
                        {#todo: why twig doesn't see the utf-8#}
                        Gesti√≥n
                    </h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>
                        <span class="icon icon-coin-dollar"></span>
                        Finanzas
                    </h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3 id="exit">
                        <span class="icon icon-exit"></span>
                        Salir
                    </h3>
                </a>
            </div>
        </div>
        <!-- /morphsearch-content -->
        <span class="morphsearch-close"></span>
    </div>
    <!-- /morphsearch -->
    <div class="overlay"></div>

    {% block body %}{% endblock %}

    {% block scripts %}

        {% block default_scripts %}
            <script src="{{ asset('public/js/jquery.js') }}"></script>
            <script src="{{ asset('public/js/bootstrap.js') }}"></script>
            <script src="{{ asset('public/js/classie.js') }}"></script>
        {% endblock %}

        {% block page_scripts %}
        {% endblock %}

    {% endblock %}
</body>
</html>
