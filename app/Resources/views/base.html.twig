<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>
        {% block title %}
            Events
        {% endblock %}
    </title>
    {% block styles %}

        {% block default_styles %}
            <link rel="stylesheet" href="{{ asset('public/css/bootstrap.css') }}"/>
            <link rel="stylesheet" href="{{ asset('public/plugins/swiper/swiper.css') }}">
            <link rel="stylesheet" href="{{ asset('public/plugins/morphSearch/morphsearch.css') }}">
            <link rel="stylesheet" href="{{ asset('public/css/site.css') }}"/>
        {% endblock %}

        {% block page_styles %}
        {% endblock %}

    {% endblock %}

    {% block init_scripts %}
        <script src="{{ asset('public/js/modernizr.js') }}"></script>
        {#<script src="{{ asset('public/js/rem.js') }}"></script>#}
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="{{ asset('public/js/html5shiv.js') }}"></script>
        <script src="{{ asset('public/js/respond.min.js') }}"></script>
        <![endif]-->
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

    <div class="topbar">
        <a href="#" class="pull-right" id="profile">
            <img src="{{ asset('anonymous.png') }}"/>
            <span>Mi Perfil</span>
            <span class="caret-down"></span>
        </a>
        <a href="#">
            <img src="{{ asset('public/img/1/plus.png') }}"/>
            <span>Sube un Evento</span>
        </a>
    </div>

    <div id="morphsearch" class="morphsearch">
        <div class="morphsearch-content">
            <div class="dummy-column text-center">
                <img class="img-circle img-responsive" src="{{ asset('anonymous.png') }}" alt="">

                <h2 id="username">Julieta Fuentes</h2>
            </div>
            <div class="dummy-column">
                <a class="dummy-media-object" href="#">
                    <h3>Mi Perfil</h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>Amigos</h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>Mis tickets</h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>Mis eventos</h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>Notificaciones <span class="badge">5</span></h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>Gestión</h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3>Finanzas</h3>
                </a>
                <a class="dummy-media-object" href="#">
                    <h3 id="exit">Salir</h3>
                </a>
            </div>
        </div>
        <!-- /morphsearch-content -->
        <span class="morphsearch-close"></span>
    </div>
    <!-- /morphsearch -->
    <div class="overlay"></div>

    {% block body %}{% endblock %}

    {% block scripts %}

        {% block default_scripts %}
            <script src="{{ asset('public/js/jquery.js') }}"></script>
            <script src="{{ asset('public/js/bootstrap.js') }}"></script>
            <script src="{{ asset('public/js/classie.js') }}"></script>
        {% endblock %}

        {% block page_scripts %}
        {% endblock %}

    {% endblock %}
</body>
</html>
