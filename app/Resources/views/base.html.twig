<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>
        {% block title %}
            Events
        {% endblock %}
    </title>
    {% block styles %}

        {% block default_styles %}
            <link rel="stylesheet" href="{{ asset('public/css/bootstrap.css') }}"/>
            <link rel="stylesheet" href="{{ asset('public/plugins/swiper/swiper.css') }}">
            <link rel="stylesheet" href="{{ asset('public/plugins/sidebar/sidebar.css') }}"/>
            <link rel="stylesheet" href="{{ asset('public/css/site.css') }}"/>
        {% endblock %}

        {% block page_styles %}
        {% endblock %}

    {% endblock %}

    {% block init_scripts %}
        <script src="{{ asset('public/js/modernizr.js') }}"></script>
        {# TODO: use yep nope for feature detection (vw, vh, etc...) #}
        <script src="{{ asset('public/js/rem.js') }}"></script>
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="{{ asset('public/js/html5shiv.js') }}"></script>
        <script src="{{ asset('public/js/respond.min.js') }}"></script>
        <![endif]-->
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

    <div class="topbar">

        <a href="#" class="pull-right" id="profile">
            <img src="{{ asset('public/img/1/user.png') }}"/>
            <span>Mi Perfil</span>
            <span class="caret-down"></span>
        </a>

        <a href="#">
            <img src="{{ asset('public/img/1/plus.png') }}"/>
            <span>Sube un Evento</span>
        </a>
    </div>

    {% block body %}{% endblock %}

    <div class="st-menu">
        <div class="user text-center">
            <img src="{{ asset('public/img/2/user.png') }}" alt="">

            <h3>Julieta Fuentes</h3>
        </div>
        <div class="menu">
            <ul class="right-menu list-unstyled">
                <li>
                    <p>Mi perfil</p>
                </li>
                <li>
                    <p>Amigos</p>
                </li>
                <li>
                    <p>Mis tickets</p>
                </li>
                <li>
                    <p>Mis eventos</p>
                </li>
                <li>
                    <p>Notificaciones <span class="badge pull-right">4</span></p>
                </li>
                <li>
                    <p>Gestión</p>
                </li>
                <li>
                    <p>Finanzas</p>
                </li>
                <li>
                    <p>Salir</p>
                </li>
            </ul>
        </div>
    </div>


    {% block scripts %}

        {% block default_scripts %}
            <script src="{{ asset('public/js/jquery.js') }}"></script>
            <script src="{{ asset('public/js/bootstrap.js') }}"></script>
            <script src="{{ asset('public/js/classie.js') }}"></script>
        {% endblock %}

        {% block page_scripts %}
        {% endblock %}

    {% endblock %}
</body>
</html>
